<resources>
    <!-- Base application theme. -->
    <style name="Theme.Totetest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!--<item name="colorPrimary">@color/purple_500</item>-->
        <item name="colorPrimary">@color/application</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="color_first_place">@color/red</item>
        <item name="color_second_place">@color/green</item>
        <item name="color_third_place">@color/navy</item>
        <item name="color_other_place">@color/dark_grey</item>
    </style>

    <style name="SplashActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.Totetest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="Theme.Totetest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Totetest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="button_start_fragment" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">40dp</item>
        <item name="strokeColor">@color/application</item>
        <item name="strokeWidth">@dimen/margin_sm</item>
        <item name="android:layout_marginBottom">@dimen/margin_sm</item>
    </style>

    <style name="LayoutTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorEnabled">false</item>
        <item name="android:layout_marginBottom">@dimen/margin_sm</item>
    </style>

    <style name="TextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <!--<item name="android:padding">@dimen/padding</item>-->
        <item name="android:textColorHint">#757575</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="TextInputGoal" parent="TextInput">
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:padding">@dimen/padding_sm</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:buttonTint">@color/application</item>
    </style>

    <style name="CardViewAdmin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/background_light</item>
        <item name="contentPadding">@dimen/padding</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

</resources>